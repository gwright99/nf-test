{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Rob Syme test template/master/nextflow_schema.json",
    "title": "Rob Syme test template pipeline parameters",
    "description": "",
    "type": "object",
    "definitions": {
        "reference_genome_options": {
            "title": "Reference genome options",
            "type": "object",
            "fa_icon": "fas fa-dna",
            "description": "Reference genome related files and options required for the workflow.",
            "properties": {
                "fasta": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "^\\S+\\.fn?a(sta)?(\\.gz)?$",
                    "description": "Path to FASTA genome file.",
                    "help_text": "This parameter is *mandatory* if `--genome` is not specified. If you don't have a BWA index available this will be generated for you automatically. Combine with `--save_reference` to save BWA index for future runs.",
                    "fa_icon": "far fa-file-code"
                },
                "vcf": {
                    "type": "string",
                    "default": "s3://scidev-testing/projects/fusion-vep-stressor/inputs/HCC1395N.strelka.genome.vcf.gz",
                    "description": "Path to VCF file to annotate"
                },
                "vep_cache": {
                    "type": "string",
                    "default": "s3://scidev-testing/projects/fusion-vep-stressor/vep_cache",
                    "description": "Path to VEP cache"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/reference_genome_options"
        }
    ]
}
